<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Yoklama Başlığı -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/attendanceTitleLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:startIconDrawable="@drawable/outline_title_24"
        app:startIconTint="@color/secondary400">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/attendanceTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Yoklama Başlığı"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Tarih ve Saat Seçici -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/attendanceDateTimeLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusTopStart="12dp"
        app:startIconDrawable="@drawable/sharp_access_time_24"
        app:startIconTint="@color/secondary400">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/attendanceDateTimeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="false"
            android:hint="Tarih ve Saat Seçin"
            android:inputType="text"
            android:maxLines="1" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Ekle Butonu -->
    <Button
        android:id="@+id/addAttendanceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/primary"
        android:text="Yoklama Ekle"
        app:cornerRadius="12dp" />

</LinearLayout>
