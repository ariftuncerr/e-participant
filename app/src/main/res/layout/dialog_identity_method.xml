<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Kamera Önizleme -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="0dp"
        android:layout_height="280dp"
        app:implementationMode="compatible"
        app:scaleType="fillCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Okunan isim -->
    <TextView
        android:id="@+id/tvDetectedName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Okunan isim burada görünecek"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/previewView"
        app:layout_constraintStart_toStartOf="@id/previewView"
        app:layout_constraintEnd_toEndOf="@id/previewView" />

    <!-- Başlat / Durdur -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStartCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kamerayı Başlat"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        app:layout_constraintTop_toBottomOf="@id/tvDetectedName"
        app:layout_constraintStart_toStartOf="@id/tvDetectedName"
        app:layout_constraintEnd_toStartOf="@+id/btnStopCamera"
        android:layout_marginEnd="6dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnStopCamera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Durdur"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:layout_constraintTop_toTopOf="@id/btnStartCamera"
        app:layout_constraintStart_toEndOf="@id/btnStartCamera"
        app:layout_constraintEnd_toEndOf="@id/tvDetectedName"
        android:layout_marginStart="6dp"/>

    <!-- ONAY OVERLAY (en sonda tanımlı, en önde) -->
    <FrameLayout
        android:id="@+id/approvalOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        android:background="#80000000"
        android:elevation="9999dp"
        app:layout_constraintTop_toTopOf="@+id/previewView"
        app:layout_constraintBottom_toBottomOf="@+id/previewView"
        app:layout_constraintStart_toStartOf="@+id/previewView"
        app:layout_constraintEnd_toEndOf="@+id/previewView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgSuccessIcon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/sharp_done_24"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvApprovedMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
