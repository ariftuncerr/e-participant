<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Ana renkler -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/primary100</item>
        <item name="colorOnPrimaryContainer">@color/primary950</item>

        <!-- İkincil renkler -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/secondary100</item>
        <item name="colorOnSecondaryContainer">@color/secondary950</item>

        <!-- Arka plan ve yüzey -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/text900</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text900</item>

        <!-- Hata rengi (Varsa ayarlanabilir) -->
        <item name="colorError">#B00020</item>
        <item name="colorOnError">@color/white</item>

        <!-- Durum çubuğu için -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>

        <item name="android:fontFamily">@font/poppins</item>
        <item name="fontFamily">@font/poppins</item>
    </style>
</resources>
