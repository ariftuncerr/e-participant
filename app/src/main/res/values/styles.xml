<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tüm köşeleri yuvarlatılmış daire şekli -->
    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Sadece üst köşeleri yuvarlatılmış şekil -->
    <style name="BottomNavRoundedTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- BottomNavigationView aktif item arka plan stili -->
    <style name="BottomNav.ActiveIndicator">
        <item name="android:insetLeft">6dp</item>
        <item name="android:insetRight">6dp</item>
        <item name="android:insetTop">4dp</item>
        <item name="android:insetBottom">4dp</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Pill</item>
        <item name="backgroundColor">@color/primary50</item>
    </style>

    <!-- Tam oval köşe tanımı (Material 3 uyumlu) -->
    <style name="Shape.Pill" parent="ShapeAppearance.Material3.Corner.Full"/>

    <!-- Alias: Eğer eski kodlarda @style/BottomNav geçiyorsa hatasız çalışsın -->
    <style name="BottomNav" parent="BottomNav.ActiveIndicator" />

</resources>
